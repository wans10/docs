{
  "extends": "@fern-platform/configs/tsconfig/server.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "isolatedModules": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable", "webworker"],
    "types": ["node", "react", "react-dom"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./api/**/*"],
  "exclude": ["**/__test__"]
}
